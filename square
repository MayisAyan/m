#include <stdio.h>

int main() {
    int n = 0;
    printf("Enter the size of the square\n");
    scanf("%d", &n);
    for(int a = 0; a < 2; ++a){
        for(int j = 0; j < n; ++j){
            if(a == 0 || a == (n-1)){
            printf("* ");
        }
        }
    }
    for(int i = 1; i < n -1; ++i){
        printf("\n* ");
        int b = 0;
        while(b != n - 2){
            printf("  ");
            ++b;
        }
        b = 0;
        printf("*");
    }
    printf("\n");
    for(int a = 0; a < 2; ++a){
        for(int j = 0; j < n; ++j){
            if(a == 0 || a == (n-1)){
            printf("* ");
            }
        }
    }
    return 0;
}
